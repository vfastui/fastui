{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client","node"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["dist", "node_modules"]
}
